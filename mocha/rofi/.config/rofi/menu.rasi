* {
    width: 600;
    font: "Work Sans 12";
}
@import "./colors.rasi"
element-text, element-icon, mode-switcher {
    background-color: inherit;
    text-color: inherit;
    font: @font;
    highlight: none; 
}

window {
    border-color: transparent;
    background-color: @base;
    padding: 1em;
    font: @font;
    border: 0.2em;
    border-color: @peach;
    border-radius: 5px;
}

mainbox {
    background-color: @base;
    font: @font;
}

inputbar {
    children: [prompt, textbox-prompt-colon, entry];
    background-color: @surface0;
    border-radius: 5px;
    padding: 2px;
    font: @font;
    border-color: @peach;
    padding: 5px 10px 5px 10px;  
}

prompt {
    enabled: true;
    background-color: @surface0;
    text-color: @peach;
    text-align: center;
    margin: 0px;
    font: @font;
}

textbox-prompt-colon {
    str: ":";
    text-color: @peach;
    background-color: @surface0;
    font: @font;
    expand: false;
    width: 1ch;
}

entry {
    padding: 0 0 0 5px;
    text-color: @text;
    background-color: @surface0;
    text-align: center; 
    line-height: 30px;   
    font: @font;
}

listview {
    border: 0px;
    padding: 5px 0px 0px;
    columns: 1;
    background-color: @base;
    fixed-height: false;
    lines: 7;
    border-radius: 0px;
    font: @font;
}

element {
    padding: 5px;
    border-radius: 0px;
    font: @font;
    background-color: @base;
    text-color: @text;
    margin: 5px 0;
}

element-icon {
    enabled: true;
    size: 22px;
    padding: 0 5px 0 0;
    font: @font;
}

element selected {
    background-color: @base;
    border-radius: 7.5px;
    text-color: @peach;
    font: @font;
}

